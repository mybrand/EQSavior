<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.view.MenuActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#d3d3d3"
        android:text="Main"
        android:textSize="10pt" />

    <Button
        android:id="@+id/alarm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#d3d3d3"
        android:gravity="center_vertical|center_horizontal"
        android:text="Earthquake Alarm"
        android:textSize="15pt" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="62dp"
        android:layout_toRightOf="@+id/textView1"
        android:background="#d3d3d3"
        android:orientation="vertical" >
    </LinearLayout>
    <!-- pic -->

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/alarm"
        android:layout_below="@+id/alarm"
        android:src="@drawable/wushuiyinpng" />

    <Button
        android:id="@+id/button_Monitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv1"
        android:layout_alignRight="@+id/iv1"
        android:layout_below="@+id/iv1"
        android:text="Monitoring information" />

    <Button
        android:id="@+id/button_simulation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_Monitor"
        android:layout_below="@+id/button_Monitor"
        android:text="Simulation" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_simulation"
        android:layout_alignBottom="@+id/button_simulation"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/button_simulation"
        android:text="Settings" />

</RelativeLayout>